{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile verilog test",
            "type": "shell",
            "command": "iverilog -t vvp -o testbench.vvp testbench.v",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "verilog",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern":[
                    {
                        "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            }
        },
        {
            "label": "Run verilog test",
            "type": "shell",
            "command": "vvp -v ./testbench.vvp",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
